{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/video.json",
  "title": "Video",
  "description": "Description",

  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "amplienceVideo",
    "addYoutube",
    "videoAutoLoop",
    "videoAutoPlay",
    "hidePlayButton",
    "widescreen",
    "backgroundFullScreen",
    "backgroundEffect",
    "videoThumbnail",
    "component"
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "Video"
    },
    "addYoutube": {
      "type": "string",
      "minLength": 0,
      "maxLength": 2000,
      "title": "Add YouTube URL?",
      "description": "Enter YouTube URL"
    },
    "backgroundFullScreen": {
      "title": "Background video (auto play and loop)?",
      "description": "Yes",
      "type": "boolean"
    },
    "amplienceVideo": {
      "title": "Video",
      "description": "Select video",
      "allOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/video-link"
        }
      ]
    },
    "backgroundEffect": {
      "title": "Add overlay effect?",
      "description": "Yes",
      "type": "boolean"
    }
  }
}
