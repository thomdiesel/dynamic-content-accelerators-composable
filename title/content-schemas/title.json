{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/title.json",
  "title": "Title",
  "description": "Title content type",

  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],

  "type": "object",
  "properties": {
    "header": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "Header",
      "description": "Add header text"
    },
    "headerStyle": {
      "title": "Header Colour",
      "description": "Specify a style",
      "type": "string",
      "enum": ["black", "white"]
    },
    "headerFontSize": {
      "title": "Header Font Size",
      "description": "Specify a font size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    },
    "headerFontWeight": {
      "title": "Header Font Weight",
      "description": "Specify a font weight",
      "type": "string",
      "enum": ["normal", "bold"]
    },
    "headerFontColour": {
      "title": "Override Header Font Colour",
      "description": "Choose a colour to override default",
      "format": "color",
      "type": "string"
    },
    "description": {
      "type": "string",
      "minLength": 0,
      "maxLength": 250,
      "title": "Description",
      "description": "Add description text"
    },
    "descriptionStyle": {
      "title": "Description Style",
      "description": "Specify a style",
      "type": "string",
      "enum": ["black", "white"]
    },
    "descriptionFontSize": {
      "title": "Description Font Size",
      "description": "Specify a font size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    },
    "descriptionFontWeight": {
      "title": "Description Font Weight",
      "description": "Specify a font weight",
      "type": "string",
      "enum": ["normal", "bold"]
    },
    "descriptionFontColour": {
      "title": "Description Font Colour",
      "description": "Choose a colour",
      "format": "color",
      "type": "string"
    },
    "button": {
      "title": "Button",
      "description": "Add a button",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/advanced-button.json"
        }
      ]
    },
    "titlepadding": {
      "title": "Padding",
      "description": "Set padding size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    }
  },
  "propertyOrder": [
    "header",
    "headerStyle",
    "headerFontSize",
    "headerFontWeight",
    "headerFontColour",
    "description",
    "descriptionStyle",
    "descriptionFontSize",
    "descriptionFontWeight",
    "descriptionFontColour",
    "button"
  ]
}

