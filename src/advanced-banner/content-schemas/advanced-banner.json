{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/advanced-banner.json",
  "title": "Advanced Banner",
  "description": "Banner accelerator",

  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "bannerImage",
    "imageEffect",
    "smallerheight",
    "showscrollarrow",
    "scrollarrowcolour",
    "header",
    "headerStyle",
    "headerFontSize",
    "headerFontWeight",
    "headerFontColour",
    "subheader",
    "subheaderStyle",
    "subheaderFontSize",
    "subheaderFontWeight",
    "subheaderFontColour",
    "description",
    "descriptionStyle",
    "descriptionFontSize",
    "descriptionFontWeight",
    "descriptionFontColour",
    "hideMobileText",
    "button",
    "textPositionHorizontal",
    "textPositionVertical",
    "backgroundGradient",
    "textPositionHorizontalMobile",
    "textPositionVerticalMobile",
    "backgroundGradientMobile",
    "hasVideo",
    "video",
    "showVideoTitle",
    "disclaimer",
    "disclaimerFontColour",
    "disclaimerTextHorizontal",
    "togglePOI"
  ],
  "type": "object",
  "properties": {
    "bannerImage": {
      "title": "Banner Image",
      "description": "Select or create an image content",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/image.json"
        }
      ]
    },
    "subheader": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "Subheader",
      "description": "Add subheader text"
    },
    "subheaderStyle": {
      "title": "Subheader Colour",
      "description": "Specify a style",
      "type": "string",
      "enum": ["black", "white"]
    },
    "subheaderFontSize": {
      "title": "Subheader Font Size",
      "description": "Specify a font size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    },
    "subheaderFontWeight": {
      "title": "Subheader Font Weight",
      "description": "Specify a font weight",
      "type": "string",
      "enum": ["normal", "bold"]
    },
    "subheaderFontColour": {
      "title": "Override Subheader Font Colour",
      "description": "Choose a colour to override default",
      "format": "color",
      "type": "string"
    },
    "header": {
      "type": "string",
      "minLength": 0,
      "maxLength": 100,
      "title": "Header",
      "description": "Add header text"
    },
    "headerStyle": {
      "title": "Header Colour",
      "description": "Specify a style",
      "type": "string",
      "enum": ["black", "white"]
    },
    "headerFontSize": {
      "title": "Header Font Size",
      "description": "Specify a font size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    },
    "headerFontWeight": {
      "title": "Header Font Weight",
      "description": "Specify a font weight",
      "type": "string",
      "enum": ["normal", "bold"]
    },
    "headerFontColour": {
      "title": "Override Header Font Colour",
      "description": "Choose a colour to override default",
      "format": "color",
      "type": "string"
    },
    "description": {
      "type": "string",
      "minLength": 0,
      "maxLength": 250,
      "title": "Description",
      "description": "Add description text"
    },
    "descriptionStyle": {
      "title": "Description Style",
      "description": "Specify a style",
      "type": "string",
      "enum": ["black", "white"]
    },
    "descriptionFontSize": {
      "title": "Description Font Size",
      "description": "Specify a font size",
      "type": "string",
      "enum": ["small", "medium", "large"]
    },
    "descriptionFontWeight": {
      "title": "Description Font Weight",
      "description": "Specify a font weight",
      "type": "string",
      "enum": ["normal", "bold"]
    },
    "descriptionFontColour": {
      "title": "Description Font Colour",
      "description": "Choose a colour",
      "format": "color",
      "type": "string"
    },
    "disclaimer": {
      "type": "string",
      "minLength": 0,
      "maxLength": 250,
      "title": "Disclaimer Text",
      "description": "Add disclaimer text"
    },
    "disclaimerFontColour": {
      "title": "Disclaimer Font Colour",
      "description": "Choose a colour",
      "format": "color",
      "type": "string"
    },
    "disclaimerTextHorizontal": {
      "title": "Disclaimer Text Horizontal Position",
      "description": "Choose a position",
      "type": "string",
      "enum": ["left", "center", "right"]
    },
    "textPositionHorizontal": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "title": "Horizontal text position",
      "description": "Select a position"
    },
    "textPositionVertical": {
      "type": "string",
      "enum": ["top", "middle", "bottom"],
      "title": "Vertical text position",
      "description": "Select a position"
    },
    "textPositionHorizontalMobile": {
      "type": "string",
      "enum": ["left", "center", "right"],
      "title": "Horizontal text position - mobile",
      "description": "Select a position"
    },
    "textPositionVerticalMobile": {
      "type": "string",
      "enum": ["top", "middle", "bottom"],
      "title": "Vertical text position - mobile",
      "description": "Select a position"
    },
    "button": {
      "title": "Button",
      "description": "Add a button",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/advanced-button.json"
        }
      ]
    },
    "backgroundGradient": {
      "title": "Background gradient",
      "description": "Add a gradient behind the text?",
      "type": "string",
      "enum": ["left", "right", "top", "bottom", "full"]
    },
    "hasVideo": {
      "title": "Include video?",
      "description": "Yes",
      "type": "boolean"
    },
    "backgroundGradientMobile": {
      "title": "Background gradient - mobile",
      "description": "Add a gradient behind the text?",
      "type": "string",
      "enum": ["left", "right", "top", "bottom", "full"]
    },
    "hideMobileText": {
      "title": "Hide description on mobile?",
      "description": "Yes",
      "type": "boolean"
    },
    "video": {
      "title": "Video",
      "description": "Add a video",
      "type": "object",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/video.json"
        }
      ]
    },
    "showVideoTitle": {
      "title": "Show Content Above Video",
      "description": "Show headline, copy, CTA, etc above video",
      "type": "boolean"
    },
    "smallerheight": {
      "title": "Smaller banner height?",
      "description": "Check this to show a smaller banner height",
      "type": "boolean"
    },
    "showscrollarrow": {
      "title": "Show scroll arrow",
      "description": "Show scroll arrow",
      "type": "boolean"
    },
    "scrollarrowcolour": {
      "title": "Scroll arrow colour",
      "description": "Select scroll arrow colour",
      "type": "string",
      "enum": ["white", "black"]
    },
    "togglePOI": {
      "title": "Toggle POI",
      "description": "Turn POI off",
      "type": "boolean"
    }
  }
}
