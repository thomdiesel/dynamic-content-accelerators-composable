{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "{CONTENT_TYPE_BASEPATH}/text.json",
  "title": "Text",
  "description": "Text accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "component": {
      "type": "string",
      "const": "Text"
    },
    "text": {
      "type": "string",
      "format": "markdown",
      "title": "Text",
      "minLength": 0,
      "maxLength": 6000
    }
  },
  "propertyOrder": ["text", "component"]
}
