{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "{CONTENT_TYPE_BASEPATH}/blog-list.json",
    "title": "Blog List",
    "description": "Blog List accelerator",
    "allOf": [
      {
        "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
      }
    ],
    "type": "object",
    "properties": {
      "component": {
        "type": "string",
        "const": "Blog List"
      },
      "header": {
        "type": "string",
        "minLength": 0,
        "maxLength": 50,
        "title": "Header"
      },
      "indexName": {
        "type": "string",
        "minLength": 0,
        "maxLength": 50,
        "title": "Index Name",
        "description":"The name of he search index for your blog posts"
      },
      "query": {
        "type": "string",
        "minLength": 0,
        "maxLength": 50,
        "title": "Search Query (optional)",
        "description":"The query used to filter the blog posts"
      },
      "numItems": {
        "type": "integer",
        "minimum": 0,
        "maximum": 5,
        "title": "Number of Items",
        "description":"The number of blog posts to bring back"
      }
    },
    "propertyOrder": [
      "header",
      "indexName",
      "query",
      "numItems",
      "component"
    ]
  }
  